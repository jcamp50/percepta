{
  "name": "percepta-node-service",
  "version": "1.0.0",
  "description": "Percepta Node.js service for Twitch IRC and audio capture",
  "main": "index.js",
  "scripts": {
    "start": "node node/index.js",
    "dev": "nodemon node/index.js",
